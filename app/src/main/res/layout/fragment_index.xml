<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F2F1ED"
    android:id="@+id/fragment_index"

    tools:context="com.homeworkreminder.fragment.IndexFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/index_bg2">
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="你好，"
                        android:textColor="#444444"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/index_tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="游客"
                        android:textColor="#03A9F4"
                        android:textSize="20dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/index_tv_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="10月22日"
                    android:textColor="#fff"
                    android:gravity="right"
                    android:textSize="20dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="30dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/index_tv_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="多云"
                        android:textColor="#fff"
                        android:gravity="right"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/index_tv_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25"
                        android:layout_marginLeft="10dp"
                        android:textColor="#fff"
                        android:gravity="right"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="度"
                        android:textColor="#fff"
                        android:gravity="right"
                        android:textSize="20dp"/>


                </LinearLayout>

            </LinearLayout>

            <com.youth.banner.Banner
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/banner"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        >

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="100dp"
                            android:background="@drawable/card_corner"
                            >

                            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/index_btn_bg2"
                                app:qmui_border_color="#00000000"
                                app:qmui_corner_radius="20dp"/>

                            <Button
                                android:id="@+id/index_btn_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#00000000"
                                android:text="作业大厅"
                                android:textColor="#fff"
                                android:textSize="35dp"/>


                        </FrameLayout>



                        <View
                            android:layout_width="15dp"
                            android:layout_height="10dp"/>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="100dp"
                            android:background="@drawable/card_corner"
                            >

                            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/index_btn_bg3"
                                app:qmui_border_color="#00000000"
                                app:qmui_corner_radius="20dp"/>

                            <Button
                                android:id="@+id/index_btn_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#00000000"
                                android:text="我的作业"
                                android:textColor="#fff"
                                android:textSize="35dp"/>


                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        >

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="100dp"
                            android:background="@drawable/card_corner"
                            >

                            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/index_btn_bg4"
                                app:qmui_border_color="#00000000"
                                app:qmui_corner_radius="20dp"/>

                            <Button
                                android:id="@+id/index_btn_3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#00000000"
                                android:text="番茄时钟"
                                android:textColor="#fff"
                                android:textSize="35dp"/>


                        </FrameLayout>



                        <View
                            android:layout_width="15dp"
                            android:layout_height="10dp"/>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="100dp"
                            android:background="@drawable/card_corner"
                            >

                            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/index_btn_bg5"
                                app:qmui_border_color="#00000000"
                                app:qmui_corner_radius="20dp"/>

                            <Button
                                android:id="@+id/index_btn_4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#00000000"
                                android:text="关于我"
                                android:textColor="#fff"
                                android:textSize="35dp"/>


                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        >

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="100dp"
                            android:background="@drawable/card_corner"
                            >

                            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/index_btn_bg4"
                                app:qmui_border_color="#00000000"
                                app:qmui_corner_radius="20dp"/>

                            <Button
                                android:id="@+id/index_btn_5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#00000000"
                                android:text="番茄时钟"
                                android:textColor="#fff"
                                android:textSize="35dp"/>


                        </FrameLayout>



                        <View
                            android:layout_width="15dp"
                            android:layout_height="10dp"/>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="100dp"
                            android:background="@drawable/card_corner"
                            >

                            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/index_btn_bg5"
                                app:qmui_border_color="#00000000"
                                app:qmui_corner_radius="20dp"/>

                            <Button
                                android:id="@+id/index_btn_6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#00000000"
                                android:text="关于我"
                                android:textColor="#fff"
                                android:textSize="35dp"/>


                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
